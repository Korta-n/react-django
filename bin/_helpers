#!bash



has_py() {
  if [ -x "$(command -v python3)" ]; then 
    echo "0"
    return 0
  else
    echo "1"
    return 1
  fi
}

code() {
  if [ -x "$(command -v code-insiders)" ]
  then
    code-insiders $@
  else
    code $@
  fi
}

build(){
  cd ./mainapp-ui
  npm run build
}

collectstatic(){
  python3 manage.py collectstatic
}

start_server(){
  build
  collectstatic
  source envs/bin/activate
  python3 manage.py runserver

  echo "         _____________________        "
  echo "        /                     \\      "
  echo "        |                     |       "
  echo "        |  SERVER IS STARTED  |       "
  echo "        |                     |       "
  echo "        \_____________________/       "
}